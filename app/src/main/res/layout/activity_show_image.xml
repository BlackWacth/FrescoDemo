<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawee_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hua.frescodemo.ShowImageActivity">

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="@dimen/grid_view_column_width"
        android:horizontalSpacing="@dimen/grid_view_spacing"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/grid_view_spacing" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/expand_drawee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        fresco:actualImageScaleType="centerInside"
        fresco:backgroundImage="@color/black_background"
        android:visibility="gone" />

</FrameLayout>
